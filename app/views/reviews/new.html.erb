<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<div class="container flexbox">
  <%= form_for([@restaurant, @review]) do |f| %>
    <div>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </div>
    <div>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </div>
    <br>
    <%= f.submit %>
  <% end %>
  <br>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary"%>
</div>
